<% include partials/header %>

<main class="container">
    
    <header class="jumbotron">
        <div class="container">
           <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p> 
        </div>
    </header>
    
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
        
        <% campgrounds.forEach(function(camp){ %>
            <section class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=camp.image%>">
                    <div class="caption">
                        <h4><%=camp.name%></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </section>
        <% }) %>
    </div>
</main>

<% include partials/footer %>